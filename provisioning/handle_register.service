[Unit]
Description=Python daemon
After=syslog.target
After=network.target

[Service]
EnvironmentFile=/usr/local/bin/.vcenter.txt
Type=simple
User=root
Group=root
ExecStart=/usr/bin/python3 /usr/local/bin/handle_vm_register.py $VCENTER_SERVER $VCENTER_USER $VCENTER_PASSWORD $LAB

# Give the script some time to startup
TimeoutSec=300

[Install]
WantedBy=multi-user.target
